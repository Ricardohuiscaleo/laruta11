import fs from 'fs';
import path from 'path';

const rootDir = process.cwd();

// Escanear APIs
const apiDir = path.join(rootDir, 'api');
const apis = [];
function scanApis(dir, base = '') {
    if (!fs.existsSync(dir)) return;
    fs.readdirSync(dir).forEach(file => {
        const fullPath = path.join(dir, file);
        const stat = fs.statSync(fullPath);
        if (stat.isDirectory()) {
            scanApis(fullPath, base + file + '/');
        } else if (file.endsWith('.php')) {
            const content = fs.readFileSync(fullPath, 'utf-8');
            const tables = new Set();
            const sqlPatterns = [
                /FROM\s+`?(\w+)`?/gi,
                /INTO\s+`?(\w+)`?/gi,
                /UPDATE\s+`?(\w+)`?/gi,
                /JOIN\s+`?(\w+)`?/gi,
            ];
            sqlPatterns.forEach(pattern => {
                let match;
                while ((match = pattern.exec(content)) !== null) {
                    const table = match[1];
                    if (!['select', 'where', 'order', 'group', 'limit', 'values'].includes(table.toLowerCase())) {
                        tables.add(table);
                    }
                }
            });
            const name = '/api/' + base + file;
            apis.push({ 
                name,
                fullPath,
                tables: [...tables],
                usedBy: [],
                type: 'endpoint'
            });
        }
    });
}
scanApis(apiDir);

// Detectar tipo
apis.forEach(api => {
    const name = api.name.toLowerCase();
    if (name.includes('config.php')) api.type = 'config';
    else if (name.includes('manager') || name.includes('helper') || name.includes('class')) api.type = 'class';
    else if (name.includes('callback') || name.includes('webhook')) api.type = 'webhook';
    else if (name.includes('cron') || name.includes('scheduled')) api.type = 'cron';
});

// Escanear archivos frontend
const allFiles = [];
function scanFiles(dir, base = '') {
    if (!fs.existsSync(dir)) return;
    const files = fs.readdirSync(dir);
    files.forEach(file => {
        if (file === 'node_modules' || file === 'dist' || file === '.git') return;
        const fullPath = path.join(dir, file);
        const stat = fs.statSync(fullPath);
        if (stat.isDirectory()) {
            scanFiles(fullPath, base + file + '/');
        } else {
            const ext = path.extname(file);
            if (['.astro', '.jsx', '.tsx', '.js', '.ts'].includes(ext)) {
                allFiles.push({ path: base + file, fullPath });
            }
        }
    });
}
scanFiles(path.join(rootDir, 'src'));

// Buscar uso
apis.forEach(api => {
    const apiFileName = api.name.replace('/api/', '');
    allFiles.forEach(file => {
        try {
            const content = fs.readFileSync(file.fullPath, 'utf-8');
            if (content.includes(apiFileName)) {
                api.usedBy.push(file.path);
            }
        } catch {}
    });
});

// Detectar includes PHP
apis.forEach(api => {
    apis.forEach(otherApi => {
        if (api.name === otherApi.name) return;
        try {
            const content = fs.readFileSync(otherApi.fullPath, 'utf-8');
            const fileName = api.name.split('/').pop();
            if (content.match(new RegExp(`(?:require|include)(?:_once)?.*${fileName}`, 'i'))) {
                if (!api.usedBy.includes(`${otherApi.name} (PHP include)`)) {
                    api.usedBy.push(`${otherApi.name} (PHP include)`);
                }
            }
        } catch {}
    });
});

const usedApis = apis.filter(a => a.usedBy.length > 0);
const unusedApis = apis.filter(a => a.usedBy.length === 0);
const allTables = [...new Set(apis.flatMap(a => a.tables))].sort();
const byType = {
    config: apis.filter(a => a.type === 'config'),
    class: apis.filter(a => a.type === 'class'),
    webhook: apis.filter(a => a.type === 'webhook'),
    cron: apis.filter(a => a.type === 'cron'),
    endpoint: apis.filter(a => a.type === 'endpoint')
};
